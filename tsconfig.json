{
    "extends": "@tsconfig/node-lts/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@modules/*": ["src/modules/*"],
            "@utils/*": ["src/utils/*"],
            "@models/*": ["src/models/*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "esModuleInterop": true
    }
}
